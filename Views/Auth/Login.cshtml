@inherits System.Web.Mvc.WebViewPage<OwinTestWebApplication.Models.LoginModel>
@using System.Web.Mvc.Html

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v4.0&appId=480974769162439&autoLogAppEvents=1"></script>


    <div>
        @using (var form = Html.BeginForm())
        {
            <div>
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName)
            </div>
            <div>
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password)
            </div>
            <div>
                <input type="submit" value="Log in" />
            </div>
        }
    </div>

    <div>
        @Html.ActionLink("Log in with Facebook", "LoginFacebook")
    </div>

    <div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="false">

    </div>
</body>
</html>
